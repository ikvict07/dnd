<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Insert classes -->
    <changeSet id="10-01" author="liquibase">
        <comment>Insert classes</comment>
        <insert tableName="class">
            <column name="id" valueSequenceNext="class_seq"/>
            <column name="name">Warrior</column>
            <column name="main_attribute">STRENGTH</column>
            <column name="armor_class">HEAVY</column>
            <column name="inventory_multiplier">1.2</column>
            <column name="action_points_multiplier">0.8</column>
        </insert>
        <insert tableName="class">
            <column name="id" valueSequenceNext="class_seq"/>
            <column name="name">Mage</column>
            <column name="main_attribute">INTELLIGENCE</column>
            <column name="armor_class">CLOTH</column>
            <column name="inventory_multiplier">0.8</column>
            <column name="action_points_multiplier">1.2</column>
        </insert>
        <insert tableName="class">
            <column name="id" valueSequenceNext="class_seq"/>
            <column name="name">Rogue</column>
            <column name="main_attribute">DEXTERITY</column>
            <column name="armor_class">LEATHER</column>
            <column name="inventory_multiplier">1.0</column>
            <column name="action_points_multiplier">1.0</column>
        </insert>
        <insert tableName="class">
            <column name="id" valueSequenceNext="class_seq"/>
            <column name="name">Cleric</column>
            <column name="main_attribute">HEALTH</column>
            <column name="armor_class">HEAVY</column>
            <column name="inventory_multiplier">1.0</column>
            <column name="action_points_multiplier">1.0</column>
        </insert>
    </changeSet>

    <!-- Insert locations -->
    <changeSet id="10-02" author="liquibase">
        <comment>Insert locations</comment>
        <insert tableName="location">
            <column name="id" valueSequenceNext="location_seq"/>
            <column name="name">Peaceful Village</column>
            <column name="is_pvp">false</column>
        </insert>
        <insert tableName="location">
            <column name="id" valueSequenceNext="location_seq"/>
            <column name="name">Dark Forest</column>
            <column name="is_pvp">true</column>
        </insert>
        <insert tableName="location">
            <column name="id" valueSequenceNext="location_seq"/>
            <column name="name">Ancient Ruins</column>
            <column name="is_pvp">false</column>
        </insert>
        <insert tableName="location">
            <column name="id" valueSequenceNext="location_seq"/>
            <column name="name">Battleground</column>
            <column name="is_pvp">true</column>
        </insert>
    </changeSet>

    <!-- Insert effect templates -->
    <changeSet id="10-03" author="liquibase">
        <comment>Insert effect templates</comment>
        <insert tableName="effect_template">
            <column name="id" valueSequenceNext="effect_template_seq"/>
            <column name="effect_name">Strength Boost</column>
            <column name="effect">BUFF</column>
            <column name="affected_attribute_type">STRENGTH</column>
            <column name="value">10</column>
            <column name="duration_rounds">3</column>
        </insert>
        <insert tableName="effect_template">
            <column name="id" valueSequenceNext="effect_template_seq"/>
            <column name="effect_name">Intelligence Drain</column>
            <column name="effect">DE_BUFF</column>
            <column name="affected_attribute_type">INTELLIGENCE</column>
            <column name="value">-5</column>
            <column name="duration_rounds">2</column>
        </insert>
        <insert tableName="effect_template">
            <column name="id" valueSequenceNext="effect_template_seq"/>
            <column name="effect_name">Health Regeneration</column>
            <column name="effect">BUFF</column>
            <column name="affected_attribute_type">HEALTH</column>
            <column name="value">5</column>
            <column name="duration_rounds">5</column>
        </insert>
        <insert tableName="effect_template">
            <column name="id" valueSequenceNext="effect_template_seq"/>
            <column name="effect_name">Dexterity Boost</column>
            <column name="effect">BUFF</column>
            <column name="affected_attribute_type">DEXTERITY</column>
            <column name="value">8</column>
            <column name="duration_rounds">3</column>
        </insert>
    </changeSet>

    <!-- Insert spells -->
    <changeSet id="10-04" author="liquibase">
        <comment>Insert spells</comment>
        <insert tableName="spell">
            <column name="id" valueSequenceNext="spell_seq"/>
            <column name="name">Fireball</column>
            <column name="base_cost">5</column>
            <column name="is_pvp">true</column>
            <column name="spell_category">MAGIC</column>
            <column name="spell_element">FIRE</column>
            <column name="scales_from">INTELLIGENCE</column>
            <column name="spell_impact_type">1</column>
            <column name="range">10.0</column>
            <column name="value">25.0</column>
            <column name="cause_effect_id" valueNumeric="null"/>
        </insert>
        <insert tableName="spell">
            <column name="id" valueSequenceNext="spell_seq"/>
            <column name="name">Healing Light</column>
            <column name="base_cost">4</column>
            <column name="is_pvp">false</column>
            <column name="spell_category">MAGIC</column>
            <column name="spell_element">HOLY</column>
            <column name="scales_from">HEALTH</column>
            <column name="spell_impact_type">2</column>
            <column name="range">5.0</column>
            <column name="value">20.0</column>
            <column name="cause_effect_id" valueNumeric="null"/>
        </insert>
        <insert tableName="spell">
            <column name="id" valueSequenceNext="spell_seq"/>
            <column name="name">Poison Strike</column>
            <column name="base_cost">3</column>
            <column name="is_pvp">true</column>
            <column name="spell_category">MELEE</column>
            <column name="spell_element">POISON</column>
            <column name="scales_from">DEXTERITY,STRENGTH</column>
            <column name="spell_impact_type">1</column>
            <column name="range">2.0</column>
            <column name="value">15.0</column>
            <column name="cause_effect_id">2</column>
        </insert>
        <insert tableName="spell">
            <column name="id" valueSequenceNext="spell_seq"/>
            <column name="name">Blessing</column>
            <column name="base_cost">6</column>
            <column name="is_pvp">false</column>
            <column name="spell_category">MAGIC</column>
            <column name="spell_element">HOLY</column>
            <column name="scales_from">HEALTH,INTELLIGENCE</column>
            <column name="spell_impact_type">2</column>
            <column name="range">8.0</column>
            <column name="value">15.0</column>
            <column name="cause_effect_id">3</column>
        </insert>
        <insert tableName="spell">
            <column name="id" valueSequenceNext="spell_seq"/>
            <column name="name">Thunder Strike</column>
            <column name="base_cost">7</column>
            <column name="is_pvp">true</column>
            <column name="spell_category">RANGED</column>
            <column name="spell_element">THUNDER</column>
            <column name="scales_from">DEXTERITY</column>
            <column name="spell_impact_type">1</column>
            <column name="range">15.0</column>
            <column name="value">30.0</column>
            <column name="cause_effect_id" valueNumeric="null"/>
        </insert>
    </changeSet>

    <!-- Insert items -->
    <changeSet id="10-05" author="liquibase">
        <comment>Insert items</comment>
        <insert tableName="item">
            <column name="id" valueSequenceNext="item_seq"/>
            <column name="name">Steel Sword</column>
            <column name="type">1</column>
            <column name="weight">5.0</column>
        </insert>
        <insert tableName="item">
            <column name="id" valueSequenceNext="item_seq"/>
            <column name="name">Leather Armor</column>
            <column name="type">0</column>
            <column name="weight">8.0</column>
        </insert>
        <insert tableName="item">
            <column name="id" valueSequenceNext="item_seq"/>
            <column name="name">Health Potion</column>
            <column name="type">2</column>
            <column name="weight">0.5</column>
        </insert>
        <insert tableName="item">
            <column name="id" valueSequenceNext="item_seq"/>
            <column name="name">Magic Staff</column>
            <column name="type">1</column>
            <column name="weight">3.0</column>
        </insert>
        <insert tableName="item">
            <column name="id" valueSequenceNext="item_seq"/>
            <column name="name">Plate Armor</column>
            <column name="type">0</column>
            <column name="weight">15.0</column>
        </insert>
        <insert tableName="item">
            <column name="id" valueSequenceNext="item_seq"/>
            <column name="name">Dragon Scale</column>
            <column name="type">3</column>
            <column name="weight">2.0</column>
        </insert>
    </changeSet>

    <!-- Insert weapons -->
    <changeSet id="10-06" author="liquibase">
        <comment>Insert weapons</comment>
        <insert tableName="weapon">
            <column name="id" valueSequenceNext="weapon_seq"/>
            <column name="name">Steel Sword</column>
            <column name="damage_multiplier">1.2</column>
            <column name="action_points_multiplier">0.9</column>
            <column name="scales_from">STRENGTH</column>
            <column name="item_id">1</column>
        </insert>
        <insert tableName="weapon">
            <column name="id" valueSequenceNext="weapon_seq"/>
            <column name="name">Magic Staff</column>
            <column name="damage_multiplier">1.5</column>
            <column name="action_points_multiplier">0.8</column>
            <column name="scales_from">INTELLIGENCE</column>
            <column name="item_id">4</column>
        </insert>
    </changeSet>

    <!-- Insert armor sets -->
    <changeSet id="10-07" author="liquibase">
        <comment>Insert armor sets</comment>
        <insert tableName="armor_set">
            <column name="id" valueSequenceNext="armor_set_seq"/>
            <column name="name">Leather Armor</column>
            <column name="damage_reduction">0.8</column>
            <column name="swiftness">0.2</column>
            <column name="armor_class">LEATHER</column>
            <column name="protects_from">PHYSICAL</column>
            <column name="item_id">2</column>
        </insert>
        <insert tableName="armor_set">
            <column name="id" valueSequenceNext="armor_set_seq"/>
            <column name="name">Plate Armor</column>
            <column name="damage_reduction">1.5</column>
            <column name="swiftness">0.5</column>
            <column name="armor_class">HEAVY</column>
            <column name="protects_from">FIRE</column>
            <column name="item_id">5</column>
        </insert>
    </changeSet>

</databaseChangeLog>